                <Grid Background="#FFE5E5E5" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="12*"/>
                        <RowDefinition Height="60*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" 
                            Margin="20,20,0,20"
                            Content="код:"/>
                        <ComboBox
                            IsEditable="True"
                            Name="tb_code"
                            Visibility="Visible" 
                            Text="Введите код или фамилию"
                            Foreground="Gray"
                            Width="300" 
                            Height="50" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Margin="20" 
                            Padding="10" 
                            FontSize="20"/>
                        <TextBox 
                            Width="100"
                            TextAlignment="Center"
                            Margin="5" 
                            Background="#FFE5E5E5" 
                            Foreground="Gray" 
                            TextWrapping="Wrap"
                            VerticalContentAlignment="Center"
                            Text="Цвет бейджа"/>
                        <TextBox 
                            Width="150" 
                            TextAlignment="Center" 
                            Margin="5" 
                            Background="#FFE5E5E5" 
                            VerticalContentAlignment="Center"
                            Foreground="Gray"
                            Text="Статус оплаты"/>
                        <StackPanel 
                            Orientation="Vertical" 
                            Width="120" 
                            Margin="5">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Зарегистрировано"/>
                            <TextBlock
                                FontSize="50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="5555"/>
                        </StackPanel>
                        <StackPanel 
                            Orientation="Vertical" 
                            Width="180" 
                            Margin="5">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Актуализировано"/>
                            <TextBlock
                                FontSize="65"
                                FontStyle="Normal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="5555"/>
                        </StackPanel>
                        <StackPanel 
                            Orientation="Vertical" 
                            Width="120" 
                            Margin="5">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Создано"/>
                            <TextBlock
                                FontSize="50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="5555"/>
                        </StackPanel>
                        <StackPanel 
                            Orientation="Vertical" 
                            Width="120" 
                            Margin="5">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Не пришло"/>
                            <TextBlock
                                FontSize="50"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="5555"/>
                        </StackPanel>
                    </StackPanel>
                    <DataGrid 
                        x:Name="workgrid"
                        Grid.Row="1" 
                        Margin="10" 
                        AutoGenerateColumns="True" >
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Файл">
                <Grid Background="#FFE5E5E5"  >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200*"/>
                        <ColumnDefinition Width="600*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel >
                        <Label
                            Margin="10" 
                            Content="{
                            Binding _ProgressBar.Status, 
                            UpdateSourceTrigger=PropertyChanged}"/>
                        <Button 
                            Margin="10"  
                            Content="Загрузить данные из файла"
                            Command="{Binding AddDataFromFileToDatabase}"/>
                        <Button Margin="10" Content="Удалить данные файл"/>
                        <Button Margin="10" Content="Выгрузить данные в файл Exel"/>
