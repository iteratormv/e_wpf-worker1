                                 HorizontalAlignment="Left" 
                                 Height="30" Margin="10,10,0,0" 
                                 VerticalAlignment="Top" 
                                 Width="538" 
                                 RenderTransformOrigin="0.6,-2"
                                 Value="{Binding _ProgressBar.Progress}"
